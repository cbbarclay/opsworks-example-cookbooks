global
    log <% node[:opsworks][:instance][:private_ip] %> local0 notice
    user haproxy
    group haproxy

defaults
    log global
    retries 2
    timeout connect 3000
    timeout server 5000
    timeout client 5000
        
listen mysql-cluster
    bind :3306
    mode tcp
    option mysql-check user haproxy_check
    balance roundrobin
    <% node[:opsworks][:stack][:rds_instances].each do |instance| %>
    server <%= instance[:db_instance_identifier] %> <%= instance[:private_ip] %>:3306 check
    <% end %>

